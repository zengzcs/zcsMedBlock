// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PatientPersonalInfo {
  patientId                  Int     @id @default(autoincrement())
  phoneNumber                String
  name                       String?
  icNumber                   String  @unique
  email                      String?
  gender                     String
  height                     Float
  weight                     Float
  occupation                 String
  address                    String
  bloodGroup                 String?
  allergiesHistory           String
  diagnosisHistory           String
  emergentContactName        String
  emergentContactPhoneNumber String
  patientMedicalRecordHash   String?
}

model PatientMedicationRecord {
  medicationRecordsId Int      @id @unique @default(autoincrement())
  patientId           Int      
  diagnosis           String
  medicine            String
  medicalDataHash     String?
  timeStamp           DateTime
}

model MedicalInstitutions {
  medicalInstitutionId Int     @id @unique @default(autoincrement())
  name                 String
  region               String
  grade                String
  doctorDataHash       String?
}

model DoctorInfo {
  doctorId               Int     @id @default(autoincrement())
  medicalInstitutionId   String
  name                   String
  gender                 String
  icNumber               String  @unique
  phoneNumber            String
  email                  String
  category               String
  authorizedPatientsHash String?
}
